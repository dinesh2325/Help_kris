      <div class="main">
        <div class="register">
            <h2>Welcome, plz fill the form to lend your items </h2>
            <form id="register"  method="post"  action="/profile/:<%=user._id%>/lend">
                <label >Objectname:</label>
                <br>
                <input type="text" name="name" id="name" placeholder="Enter Objectname" required/>
                  <br><br>
                  <label for="category" name="cat" id="name"  >Category :</label>
                  <br>
                  <select id="category">
                    <option value="Electronics">Electronics</option>
                    <option value="Stationary">Stationary</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Books">Books</option>
                    <option value="Bicycle">Bicycle</option>
                  </select>
                  <br>
                  <!-- <input name="cat" type="text" id="name" placeholder=" Enter Category" required/> -->
                  <br>
                  <label >Amount :</label>
                  <br>
                 <input name="price" type="text" id="name" placeholder="Enter Price" required/>
                 <br><br>
                 <label >Return Date:</label>
                 <br>
                 <input name="time"  type="date" id="name" placeholder="time duration" required/>
                 <br><br>
                 <label >Check here to share your details!</label>
                 <br>
                 <input name="userid" type="checkbox" id="userid" value="<%=user._id%>" required/>
                    <br><br>
                <input type="submit" value="Submit" name="submit" id="submit" onclick="openPopup()">
        
                 <div class="popup" id="popup">

            <i class="fa-solid fa-check"></i>
    
            <div class="content">
                <h2>Item lended Successfully</h2>
                <p>Thank you for lending item!</p>
                <button onclick="closePopup()">OK</button>
            </div>
        </div>

                  
