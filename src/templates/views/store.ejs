<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/store.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>

    <section id="navbar_section">
        <div class="nav">
            <ul>
                <li>
                    <a href="/category/<%=user._id%>/Electronics"  class="ao"> Electronics</a>
                </li>
                <li>
                    <a href="/category/<%=user._id%>/Stationary" class="ao"> Stationary</a>
                </li>
                <li>
                    <a href="/category/<%=user._id%>/Clothing" class="ao"> Clothing</a>
                </li>
                <li>
                    <a href="/category/<%=user._id%>/Books" class="ao"> Books</a>
                </li>
            </ul>

        </div>
    </section>

    <!-- filterbar -->
    <label for="filter">Price filter:</label>

    <select name="filter" id="filterbar" onchange="searchfun2()">
        <option value="">Price Filter</option>
        <option value="100">less than 100</option>
        <option value="500">less than 500</option>
        <option value="1000">less than 1000</option>
        <option value="1500">less than 1500</option>
        <option value="2000">less than 2000</option>
        <option value="2500">less than 2500</option>
        <option value="3000">less than 3000</option>
    </select>


    <!-- for search bar -->
    <div class="div2">
        <div class="box">
            <input type="text" id="searchbar" class="search" placeholder="Search Here..." onkeyup="searchfun()">
            <button class="button" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </div>




    <!-- table for item -->
    <div class="div3">
        <table id="mytable" class="content-table">
            <thead>
                <tr>
                    <th>Object Name</th>
                    <th>Price</th>
                    <th>Availability</th>
                    <th>Buy</th>
                </tr>
            </thead>
            <tbody>
                <% if(record.length>0){%>
                    <%record.forEach(function(element){%>
                        <%if(element.sellername!=user.name){%>
                            <tr>
                                <td>
                                    <%=element.name%>
                                </td>
                                <td>
                                    <%=element.price%>
                                </td>
                                <td>
                                    <%=element.status%>
                                </td>
                                <%if(element.status==="Available"){%>
                                    <td> <button><a href="/<%=element._id%>/<%=user._id%>/buy" class="buy">Buy</a></button>    </td>
                                    <%}else{%>
                                        <td>Out of Stock!</td><%}%>

                            </tr>
                            <%}%>
                                <%})%>
                                    <%}%>
            </tbody>
        </table>
    </div>




    <script>
        // function for search bar
        function searchfun() {
            let filter = document.getElementById("searchbar").value.toUpperCase();
            let myTable = document.getElementById("mytable");

            let tr = myTable.getElementsByTagName('tr');

            for (var i = 0; i < tr.length; i++) {
                let td = tr[i].getElementsByTagName('td')[0];
                if (td) {
                    let textvalue = td.textContent || td.innerHTML;
                    if (textvalue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";

                    } else {
                        tr[i].style.display = "none"
                    }
                }
            }
        }



    //function for filterbar
        function searchfun2() {
            let filter = document.getElementById("filterbar").value;
            let myTable = document.getElementById("mytable");

            let tr = myTable.getElementsByTagName('tr');
           console.log(filter);
            for (var i = 0; i < tr.length; i++) {
                let td = tr[i].getElementsByTagName('td')[1];
                if (td) {
                    let textvalue = td.textContent || td.innerHTML;
                    if (Number(textvalue)<=Number(filter)){
                        tr[i].style.display = "";

                    } else {
                        tr[i].style.display = "none"

                    }
                }
            }
        }
    </script>




</body>

</html>